<mvc:View
    controllerName="zqueryres.controller.QueryResolutionMaster"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:ui="sap.suite.ui.commons"
    xmlns:c="sap.ui.core"
    displayBlock="true"
   
>
    <App>
        <pages>
            <Page title="My Queries">
                <subHeader>
                    <Toolbar id="toolbar1">
                        <SearchField
                            id="idSearchSo"
                            search="onSearch"
                        />
                        <Button
                            icon="sap-icon://filter"
                            tooltip="{i18n>refreshButtonTooltip}"
                            press="handleOpenDialog"
                            type="Emphasized"
                        />
                        <ToolbarSpacer />
                    </Toolbar>
                </subHeader>
                <content>
                    <Text
                        id="idtextPocount"
                        visible="false"
                    />
                    <Text
                        id="idtextPocountAlredyR"
                        visible="false"
                    />
                    <IconTabBar
                        id="idIconTabBarNoIcons"
                        applyContentPadding="false"
                        expanded="{device>/isNoPhone}"
                        expandable="false"
                        class="sapUiResponsiveContentPadding"
                        select="OnSelectTab"
                    >
                        <items>
                            <IconTabFilter
                                text="To Be Answered"
                                key="ToBeAns"
                                class="clsTobeAsnTab"
                            >
                                <List
                                    items="{/results}"
                                    id="listToBeAns"
                                    noDataText="No Query To Respond"
                                    mode="SingleSelectMaster"
                                    selectionChange="onSelectionChange"
                                    growing="true"
                                    growingScrollToLoad="true"
                                    growingThreshold="100"
                                >
                                    <items>
                                        <ObjectListItem
                                            title="{QueryID}"
                                            type="Active"
                                            press="onListItemPress"
                                        >
                                            <firstStatus>
                                                <ObjectStatus
                                                    text="{QueryFromID}"
                                                    visible="false"
                                                    class="clsQueryFrom"
                                                />
                                            </firstStatus>
                                            <secondStatus>
                                                <ObjectStatus
                                                    text="{QueryStatusText}"
                                                    state="{ path: 'QueryStatusText', formatter: '.formatter.status' }"
                                                />
                                            </secondStatus>
                                            <attributes>
                                                <ObjectAttribute
                                                    text="{PO_NO}"
                                                    visible="false"
                                                />
                                                <ObjectAttribute
                                                    text="From :{QueryFrom} "
                                                />
                                                <ObjectAttribute
                                                    text="{QueryDate} {QueryTime}"
                                                />
                                                <ObjectAttribute
                                                    text="{PoType}"
                                                    visible="false"
                                                />
                                            </attributes>
                                        </ObjectListItem>
                                    </items>
                                </List>
                            </IconTabFilter>
                            <IconTabFilter
                                text="Raised By Me"
                                key="AlrdRaised"
                            >
                                <List
                                     items="{/results}"
                                    id="listAlrdRaised"
                                    noDataText="No Query Raised"
                                    mode="SingleSelectMaster"
                                    selectionChange="onSelectionChange"
                                    growing="true"
                                    growingScrollToLoad="true"
                                    growingThreshold="100"
                                >
                                    <items>
                                        <ObjectListItem
                                            title="{QueryID}"
                                            type="Active"
                                            press="onListItemPress"
                                        >
                                            <firstStatus>
                                                <ObjectStatus
                                                    text="{UserID}"
                                                    visible="false"
                                                />
                                            </firstStatus>
                                            <secondStatus>
                                                <ObjectStatus
                                                    text="{QueryStatusText}"
                                                    state="{ path: 'QueryStatusText', formatter: '.formatter.status' }"
                                                />
                                            </secondStatus>
                                            <attributes>
                                                <ObjectAttribute
                                                    text="{PO_NO}"
                                                    visible="false"
                                                />
                                                <ObjectAttribute
                                                    text="To:{QueryTo} "
                                                />
                                                <ObjectAttribute
                                                    text="{QueryToID} "
                                                />
                                                <ObjectAttribute
                                                    text="{PoType}"
                                                    visible="false"
                                                />
                                            </attributes>
                                        </ObjectListItem>
                                    </items>
                                </List>
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
